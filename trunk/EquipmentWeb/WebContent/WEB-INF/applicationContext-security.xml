<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security" xmlns:beans="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.springframework.org/schema/security
            http://www.springframework.org/schema/security/spring-security-3.1.xsd">
  <global-method-security pre-post-annotations="enabled" />
  <debug />

  <http pattern="/login.html" security="none" />
  <http pattern="/error.html" security="none" />
  <http use-expressions="true">
    <intercept-url pattern="/*.xhtml" access="isAuthenticated()" />
    <intercept-url pattern="/*.jsf" access="isAuthenticated()" />
    <intercept-url pattern="/**" access="permitAll" />
    <form-login login-page="/login.html" authentication-failure-url="/error.html" default-target-url="/index.jsf" />
    <logout logout-success-url="/login.html" />
    <http-basic />
  </http>

  <authentication-manager>
    <authentication-provider>
      <user-service id="inMemoryDao">
        <user name="dongzhuming" password="19821210" authorities="user"></user>
      </user-service>
    </authentication-provider>
  </authentication-manager>

</beans:beans>
